<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Opponent</th>
      <th>Score</th>
      <th>Result</th>
    </tr>
  </thead>

  <tbody>
  <% @games.each do |game| %>
    <tr>
      <td><%= format_date(game) %></td>
      <td><%= format_opponent(game) %></td>
      <td><%= format_score(game) %></td>
      <td><%= format_result(game) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
