<% if @game.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@game.errors.count, "error") %> prohibited this post from being saved:</h2>

    <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @game do |f| %>
  <%= f.label :date, "Date Played" %>
  <%= f.date_select :date %>
  <br/>

  <%= f.label :player_2_id, "Opponent" %>
  <%= f.collection_select(:player_2_id, current_user.possible_opponents, :id, :email) %>
  <br/>

  <%= f.label :player_1_score, "Your Score" %>
  <%= f.text_field :player_1_score %>
  <br/>

  <%= f.label :player_2_score, "Their Score" %>
  <%= f.text_field :player_2_score %>
  <br/>

  <%= f.submit "Log" %>
<% end %>
